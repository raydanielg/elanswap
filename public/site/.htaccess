# Force static index.html and prevent PHP execution in this folder
DirectoryIndex index.html

# Do not allow PHP files to execute here; serve them as plain text or deny
<IfModule mod_php.c>
    php_flag engine off
</IfModule>

<IfModule mod_mime.c>
    RemoveHandler .php
    RemoveType .php
    AddType text/plain .php
</IfModule>

# Apache 2.4: deny access to any .php as a hard stop (optional)
<FilesMatch "\.php$">
    Require all denied
</FilesMatch>
